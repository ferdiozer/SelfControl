<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ferdiozer.selfcontrolv1.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txt_main_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="25dp"
                android:paddingBottom="10dp"
                android:text="@string/main_title"
                android:textColor="?attr/actionModeSplitBackground"
                android:textSize="26sp" />

            <TextView
                android:id="@+id/txt_today"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                android:text="@string/day_time"
                android:textSize="18sp"
                tools:ignore="InvalidId,RtlSymmetry" />

            <Button
                android:id="@+id/btn_time"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="#66a3ff"
                android:drawableEnd="?android:attr/listChoiceIndicatorSingle"
                android:enabled="false"
                android:paddingEnd="20dp"
                android:text="@string/button"
                android:textColor="@android:color/white"
                android:textSize="30sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                tools:layout_editor_absoluteY="47dp"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/txt_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:text="@string/day_look_size"
                android:textSize="18sp"
                tools:ignore="InvalidId,RtlSymmetry" />

            <Button
                android:id="@+id/btn_count"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="#3385ff"
                android:drawableEnd="?android:attr/listChoiceIndicatorSingle"
                android:enabled="false"
                android:paddingEnd="20dp"
                android:text="@string/button"
                android:textColor="@android:color/white"
                android:textSize="30sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                tools:layout_editor_absoluteY="47dp"
                tools:ignore="RtlSymmetry" />

            <Button
                android:id="@+id/btn_app"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="#0066ff"
                android:drawableEnd="?android:attr/fingerprintAuthDrawable"
                android:paddingEnd="20dp"
                android:text="@string/btn_app_usageStats"
                android:textColor="@android:color/white"
                android:textSize="23sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                tools:layout_editor_absoluteY="47dp"
                tools:targetApi="m"
                tools:ignore="RtlSymmetry" />

            <Button
                android:id="@+id/btn_setting"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="#0052cc"
                android:drawableEnd="@android:drawable/ic_menu_recent_history"
                android:paddingEnd="10dp"
                android:text="@string/setting"
                android:textColor="@android:color/white"
                android:textSize="23sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                tools:layout_editor_absoluteY="47dp"
                tools:ignore="RtlSymmetry" />

            <Button
                android:id="@+id/sms_log"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="#003d99"
                android:drawableEnd="?android:attr/listChoiceIndicatorSingle"
                android:paddingEnd="10dp"
                android:text="@string/smslog"
                android:textColor="@android:color/white"
                android:textSize="23sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                tools:layout_editor_absoluteY="47dp"
                tools:ignore="RtlSymmetry" />

            <Button
                android:id="@+id/call_log"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="#002966"
                android:drawableEnd="?android:attr/listChoiceIndicatorSingle"
                android:paddingEnd="10dp"
                android:text="@string/calllog"
                android:textSize="23sp"
                android:textColor="@android:color/white"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                tools:layout_editor_absoluteY="47dp"
                tools:ignore="RtlSymmetry" />
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
