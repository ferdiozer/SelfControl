<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="30dp"
    android:layout_margin="10dp">


    <TextView
        android:id="@+id/txt_notif"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/bildirim_ayarlar"
        android:textSize="24sp"
        android:padding="20dp"/>

    <Switch
        android:id="@+id/switch_notif"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bildirim"
        android:textOn="Açık"
        android:textOff="Kapalı"/>


    <TextView
        android:id="@+id/txt_setting_rule_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Günlük Toplam Kullanım Sınırı"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Dakika Cinsinden Giriniz" />

        <EditText
            android:id="@+id/et_rule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="5"
            android:inputType="number"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_weight="1"
        android:background="@android:color/holo_blue_bright"
        android:text="Tamam"
        android:textSize="20sp" />

</LinearLayout>
